<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Title"
        />

    <TextView android:id="@+id/video_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_thumbnail"
        android:layout_below="@+id/video_publishedAt"
        android:textSize="10sp"
        android:text="No Description"
        />

    <TextView android:id="@+id/video_publishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/video_thumbnail"
        android:layout_below="@+id/video_title"
        android:textSize="10sp"
        android:text="Date"
        />


    <TextView android:id="@+id/video_viewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/video_thumbnail"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="0 views"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_star_unfilled"
        android:id="@+id/star_icon"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/video_viewCount"
        android:background="#fff"
        />
</RelativeLayout>